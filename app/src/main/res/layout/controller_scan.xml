<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="@dimen/u2">

    <ImageView
        android:id="@+id/ivScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/u10"
        android:src="@drawable/ic_decor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/u4"
        android:gravity="center"
        android:text="What do you want to detext today?"
        android:textSize="@dimen/text5"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivScan" />

    <TextView
        android:id="@+id/tvSubtitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/u1"
        android:gravity="center"
        android:text="Tips: Zoom in to capture text better. Detection works best with scanned documents."
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle1" />

    <TextView
        android:id="@+id/tvCameraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/u4"
        android:layout_marginTop="@dimen/u1"
        android:layout_marginEnd="@dimen/u4"
        android:layout_marginBottom="@dimen/u3"
        android:background="@drawable/bg_button"
        android:drawableStart="@drawable/ic_camera"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="@dimen/u2"
        android:text="Capture picture"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/tvFileButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvFileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/u4"
        android:layout_marginTop="@dimen/u1"
        android:layout_marginEnd="@dimen/u4"
        android:layout_marginBottom="@dimen/u3"
        android:background="@drawable/bg_button"
        android:drawableStart="@drawable/ic_gallery"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="@dimen/u2"
        android:text="Pick from files"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>