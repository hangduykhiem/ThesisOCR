<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/flLanguageContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/u9"
        android:orientation="horizontal"
        android:padding="@dimen/u2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/u5"
            android:gravity="center"
            android:text="Language selection" />
    </FrameLayout>

    <View
        android:id="@+id/vBorder1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey1"
        app:layout_constraintTop_toBottomOf="@id/flLanguageContainer" />

    <FrameLayout
        android:id="@+id/flAboutContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/u9"
        android:orientation="horizontal"
        android:padding="@dimen/u2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vBorder1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/u5"
            android:gravity="center"
            android:text="About Application"/>

    </FrameLayout>

    <View
        android:id="@+id/vBorder2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey1"
        app:layout_constraintTop_toBottomOf="@id/flAboutContainer" />


</android.support.constraint.ConstraintLayout>